<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ic20b106.client.game.menus.MainMenuController" alignment="center"
      maxHeight="Infinity" maxWidth="Infinity" spacing="10" fx:id="mainBox" style="-fx-padding: 300px 0 0 0">

    <Button fx:id="createGame">
        Create New Game
    </Button>
    <Button fx:id="lobbyList">
        Join Game
    </Button>
    <Button fx:id="options">
        Options
    </Button>
    <Button onMouseClicked="#exitApplication">
        Exit Game
    </Button>
</VBox>