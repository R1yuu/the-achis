<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Label?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ic20b106.client.game.menus.LobbyListController" alignment="center"
      maxHeight="Infinity" maxWidth="Infinity" spacing="10" styleClass="sideMenuBox">

    <ScrollPane prefHeight="500" maxHeight="500" prefWidth="500" maxWidth="500" fx:id="listPane" styleClass="lobbyBox">
        <GridPane fx:id="lobbyListPane" alignment="center">
            <Label GridPane.rowIndex="0" GridPane.columnIndex="0" text="Room Id" styleClass="fLabel, gridLabel"/>
            <Label GridPane.rowIndex="0" GridPane.columnIndex="1" text="Room Name" styleClass="fLabel, gridLabel"/>
            <Label GridPane.rowIndex="0" GridPane.columnIndex="2" text="Players" styleClass="fLabel, gridLabel"/>
            <Label GridPane.rowIndex="0" GridPane.columnIndex="3" text="Join" styleClass="fLabel, gridLabel"/>
        </GridPane>
    </ScrollPane>

    <Button>Join</Button>
    <Button onAction="#backToMainMenu">Back</Button>

</VBox>