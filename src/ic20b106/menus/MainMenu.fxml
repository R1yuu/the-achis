<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ic20b106.menus.MainMenuController" alignment="center"
      maxHeight="Infinity" maxWidth="Infinity">

    <Button fx:id="createGameButton" onMouseClicked="#newGame">
        Create New Game
    </Button>
    <Button fx:id="loadGameButton">
        Load Game
    </Button>
    <Button fx:id="optionsButton">
        Options
    </Button>
    <Button fx:id="exitButton">
        Exit Game
    </Button>
</VBox>