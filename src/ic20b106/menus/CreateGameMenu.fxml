<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ic20b106.menus.CreateGameMenuController" alignment="center"
      maxWidth="Infinity" maxHeight="Infinity">

    <Label>Board Width:</Label>
    <HBox alignment="center">
        <Slider fx:id="boardWidth" min="60" max="120"/>
        <Label text="${boardWidth.value}"/>
    </HBox>

    <Label>Height</Label>
    <HBox alignment="center">
        <Slider fx:id="boardHeight" min="60" max="120"/>
        <Label text="${boardHeight.value}"/>
    </HBox>
</VBox>
