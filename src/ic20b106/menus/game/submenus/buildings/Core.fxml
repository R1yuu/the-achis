<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import ic20b106.util.javafx.DragBox?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ic20b106.menus.game.submenus.BuildMenuController"
      fx:id="buildMenuBox"
      prefWidth="300" prefHeight="100" maxWidth="300" maxHeight="100">
    <DragBox fx:id="dragBox" prefWidth="${buildMenuBox.prefWidth}">
        <BorderPane prefWidth="${dragBox.prefWidth}">
            <right>
                <Button onMouseClicked="#closeBuildMenu">Close</Button>
            </right>
        </BorderPane>
    </DragBox>
    <HBox fx:id="submenuBox">
    </HBox>
</VBox>