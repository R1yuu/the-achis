<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import ic20b106.util.DragBox?>

<?import javafx.scene.layout.HBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ic20b106.menus.BuildMenuController"
      fx:id="buildMenuBox"
      prefWidth="300" prefHeight="100" maxWidth="300" maxHeight="100">
    <DragBox fx:id="dragBox">
        <HBox>
            <Button onMouseClicked="#closeBuildMenu">Close</Button>
        </HBox>
    </DragBox>
    <Button onMouseClicked="#placeBuilding" id="buildFactoryButton">Factory</Button>
</VBox>
