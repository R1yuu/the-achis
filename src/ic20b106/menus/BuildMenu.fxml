<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import ic20b106.util.javafx.DragBox?>

<?import javafx.scene.layout.HBox?>

<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.Region?>

<?import javafx.scene.layout.BorderPane?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ic20b106.menus.BuildMenuController"
      fx:id="buildMenuBox"
      prefWidth="300" prefHeight="100" maxWidth="300" maxHeight="100">
    <DragBox fx:id="dragBox" prefWidth="${buildMenuBox.prefWidth}">
        <BorderPane prefWidth="${dragBox.prefWidth}">

            <right>
                <Button onMouseClicked="#closeBuildMenu">Close</Button>
            </right>
        </BorderPane>
    </DragBox>
    <HBox fx:id="submenuBox">
        <fx:define>
            <Button fx:id="backButton" onMouseClicked="#backToBuilding">Back</Button>

            <HBox fx:id="setBuildingSubmenu">

                <Button onMouseClicked="#choosePathDirection" fx:id="chooseLink">Link</Button>
                <Button onMouseClicked="#placeBuilding" fx:id="buildFactoryButton">Factory</Button>
                <Button onMouseClicked="#placeBuilding" fx:id="">Test</Button>

                <Region HBox.hgrow="ALWAYS"/>

                <fx:reference source="backButton"/>
            </HBox>
            <FlowPane fx:id="chooseLinkDirSubmenu">
            </FlowPane>
        </fx:define>
    </HBox>
</VBox>
